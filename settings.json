{
    "editor.minimap.enabled": false,
    "workbench.editor.editorActionsLocation": "hidden",
    "workbench.reduceMotion": "on",
    "terminal.integrated.fontFamily": "'FiraCode Nerd Font Mono'",
    "editor.fontFamily": "'FiraCode Nerd Font Mono', 'Courier New', monospace",
    "terminal.integrated.cursorBlinking": true,
    "indentRainbow.colorOnWhiteSpaceOnly": true,
    "indentRainbow.indicatorStyle": "light",
    "editor.mouseWheelScrollSensitivity": 2,
    "editor.smoothScrolling": true,
    "window.titleBarStyle": "custom",
    "C_Cpp.intelliSenseEngine": "default",
    "editor.cursorSmoothCaretAnimation": "on",
    "window.zoomLevel": 1,
    "cmake.configureOnOpen": true,
    "editor.mouseWheelZoom": true,
    "git.openRepositoryInParentFolders": "never",
    "cmake.showOptionsMovedNotification": false,
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": false,
    "breadcrumbs.enabled": false,
    "editor.renderWhitespace": "none",
    "window.commandCenter": false,
    "workbench.productIconTheme": "materialiconic-product-icons",
    "cmake.showConfigureWithDebuggerNotification": false,
    "extensions.ignoreRecommendations": true,
    "editor.stickyScroll.enabled": false,
    "workbench.layoutControl.enabled": false,
    "breadcrumbs.icons": false,
    "editor.fontLigatures": true,
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.overviewRulerBorder": false,
    "editor.hideCursorInOverviewRuler": true,
    "workbench.editor.showIcons": false,
    "workbench.activityBar.location": "top",
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}${separator}${profileName}${separator}",
    "explorer.openEditors.visible": 0,
    "editor.unicodeHighlight.nonBasicASCII": false,
    "explorer.confirmDelete": false,
    "workbench.colorTheme": "Summer Night",
}
